{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Flutter App",
			"type": "shell",
			"command": "flutter run -d windows",
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Build and Run Flutter Web",
			"type": "shell",
			"command": "flutter run -d edge",
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Flutter Gen L10n",
			"type": "shell",
			"command": "flutter",
			"args": [
				"gen-l10n"
			],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Flutter Run Edge",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"-d",
				"edge"
			],
			"isBackground": true,
			"group": "build"
		}
	]
}