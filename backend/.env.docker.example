# Docker environment variables
# Copy this to .env.docker and modify as needed

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/delivergaz
DB_NAME=delivergaz
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=securepassword123
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123

# Server Configuration
PORT=4000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_in_production_docker
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_change_in_production_docker
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:4000,http://localhost:8080,http://localhost:4200

# File Upload Configuration
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (if using cache profile)
REDIS_PASSWORD=redis123